<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/textMessage"
        android:background="@drawable/text_received_triangle"
        android:scaleX="-1"/>

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/text_received_bg"
        android:textColor="@color/black"
        android:paddingTop="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="8dp"
        android:paddingBottom="6dp"
        android:maxWidth="280dp"
        android:minWidth="60dp"
        android:gravity="left"
        android:autoLink="all"
        android:textIsSelectable="true"/>
    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/time_text_color"
        android:layout_alignTop="@+id/textMessage"
        android:layout_alignRight="@+id/textMessage"
        android:paddingRight="8dp"
        android:maxLines="1"
        android:ellipsize="start"/>
    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignTop="@+id/textMessage"
        android:layout_alignLeft="@+id/textMessage"
        android:layout_toLeftOf="@+id/textTime"
        android:paddingRight="10dp"
        android:paddingLeft="23dp"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"/>

</RelativeLayout>
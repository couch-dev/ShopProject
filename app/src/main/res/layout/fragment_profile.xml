<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/shopHeader">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@android:drawable/ic_menu_gallery"
                android:src="@drawable/porthole_white"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:id="@+id/usernameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_toLeftOf="@+id/ratingText"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="20dp"
                android:textColor="@color/dark_gray"
                android:text="Username"/>
            <TextView
                android:id="@+id/fullNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/profileImage"
                android:layout_alignLeft="@+id/usernameText"
                android:layout_toLeftOf="@+id/ratingText"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:textSize="18dp"
                android:textColor="@color/gray"
                android:text="Full Name"/>
            <TextView
                android:id="@+id/ratingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/profileImage"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="8dp"
                android:textSize="30dp"
                android:textColor="@color/dark_gray"
                android:text="4,2"/>

            <TextView
                android:id="@+id/myItemsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileImage"
                android:background="@drawable/primary_gradient"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingRight="4dp"
                android:paddingLeft="64dp"
                android:text="My Items"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_items2_small_white"
                android:layout_alignTop="@+id/myItemsHeader"
                android:layout_alignBottom="@+id/myItemsHeader"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/myItemsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myItemsHeader"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/favoHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myItemsRecycler"
                android:background="@drawable/primary_gradient"
                android:layout_marginTop="8dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingRight="4dp"
                android:paddingLeft="64dp"
                android:text="Favorites"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_favos_small_white"
                android:layout_alignTop="@+id/favoHeader"
                android:layout_alignBottom="@+id/favoHeader"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/favoRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/favoHeader"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/shopHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/shopRecycler"
        android:background="@drawable/gray_gradient"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingRight="4dp"
        android:paddingLeft="64dp"
        android:text="Recommendations"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"/>
    <ImageView
        android:id="@+id/shopImage"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_shop_small"
        android:layout_alignTop="@+id/shopHeader"
        android:layout_alignBottom="@+id/shopHeader"
        android:paddingRight="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/shopRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp" />

</RelativeLayout>
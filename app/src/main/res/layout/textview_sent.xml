<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/triangleView"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/textMessage"
        android:background="@drawable/text_sent_triangle_selector"/>
    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/text_sent_bg_selector"
        android:textColor="@color/black"
        android:paddingTop="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="23dp"
        android:paddingBottom="6dp"
        android:maxWidth="280dp"
        android:minWidth="60dp"
        android:gravity="left"
        android:autoLink="all"
        android:textIsSelectable="true"/>
    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/time_text_color"
        android:layout_alignTop="@+id/textMessage"
        android:layout_alignLeft="@+id/textMessage"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>
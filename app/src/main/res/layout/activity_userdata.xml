<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/item_image_bg"
                android:src="@drawable/ic_profile_white"
                android:padding="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"/>
            <ImageView
                android:id="@+id/editImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignRight="@+id/profileImage"
                android:layout_alignBottom="@+id/profileImage"
                android:background="@drawable/edit_image_bg"
                android:padding="3dp"
                android:src="@drawable/ic_edit_small_white_32"/>
            <TextView
                android:id="@+id/usernameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_alignTop="@+id/profileImage"
                android:layout_alignBottom="@+id/profileImage"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:textSize="22dp"
                android:textColor="@color/dark_gray"
                android:text="Username"
                android:gravity="center_vertical"/>

            <TableLayout
                android:id="@+id/nameTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_below="@+id/profileImage"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        style="@style/edit_text_style2"
                        android:id="@+id/firstNameEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="4dp"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:hint="@string/first_name"/>
                    <EditText
                        style="@style/edit_text_style2"
                        android:id="@+id/lastNameEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:hint="@string/last_name"/>
                </TableRow>
            </TableLayout>

            <EditText
                style="@style/edit_text_style2"
                android:id="@+id/emailEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/nameTable"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <TextView
                android:id="@+id/dobText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of birth:"
                android:textSize="18sp"
                android:textColor="@color/gray"
                android:layout_below="@+id/emailEdit"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="16dp" />
            <TextView
                android:id="@+id/dateOfBirthText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dobText"
                android:layout_alignBaseline="@+id/dobText"
                android:text="01.01.1999"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_below="@+id/emailEdit"
                android:layout_marginRight="16dp"/>

            <Spinner
                android:id="@+id/countrySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateOfBirthText"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:entries="@array/countries"/>
            <EditText
                style="@style/edit_text_style2"
                android:id="@+id/addressLine1Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Address Line / Street"
                android:layout_below="@+id/countrySpinner"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <EditText
                style="@style/edit_text_style2"
                android:id="@+id/addressLine2Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Second Address Line / Street"
                android:layout_below="@+id/addressLine1Edit"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:visibility="gone"/>
            <EditText
                style="@style/edit_text_style2"
                android:id="@+id/addressLine3Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Third Address Line / Street"
                android:layout_below="@+id/addressLine2Edit"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:visibility="gone"/>
            <EditText
                style="@style/edit_text_style2"
                android:id="@+id/stateEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="State / Province / Region"
                android:layout_below="@+id/addressLine3Edit"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:visibility="gone"/>
            <TableLayout
                android:id="@+id/cityTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_below="@+id/stateEdit"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        style="@style/edit_text_style2"
                        android:id="@+id/zipEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:imeOptions="actionNext"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:hint="ZIP / Postal Code"/>
                    <EditText
                        style="@style/edit_text_style2"
                        android:id="@+id/cityEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:imeOptions="actionDone"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:hint="City / Town"/>
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cityTable"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="Save"
                android:background="@drawable/button_selector"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

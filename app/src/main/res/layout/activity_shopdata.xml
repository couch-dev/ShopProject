<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/saveButton">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/item_image_bg"
                android:src="@drawable/ic_profile_white"
                android:padding="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"/>
            <ImageView
                android:id="@+id/editImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignRight="@+id/profileImage"
                android:layout_alignBottom="@+id/profileImage"
                android:background="@drawable/edit_image_bg"
                android:padding="3dp"
                android:src="@drawable/ic_edit_small_white"/>
            <TextView
                android:id="@+id/usernameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_alignTop="@+id/profileImage"
                android:layout_alignBottom="@+id/profileImage"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:textSize="22dp"
                android:textColor="@color/dark_gray"
                android:text="@string/username_hint"
                android:gravity="center_vertical"/>

            <EditText
                style="@style/edit_text_style2"
                android:id="@+id/firstNameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileImage"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="@string/shop_name"/>
            <EditText
                style="@style/edit_text_style2"
                android:id="@+id/lastNameEdit"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/firstNameEdit"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:imeOptions="actionDone"
                android:maxLines="5"
                android:textSize="16sp"
                android:gravity="top"
                android:hint="@string/shop_description"/>

            <EditText
                style="@style/edit_text_style2"
                android:id="@+id/emailEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/lastNameEdit"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <Spinner
                android:id="@+id/countrySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailEdit"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:entries="@array/countries"/>
            <EditText
                style="@style/edit_text_style2"
                android:id="@+id/addressLine1Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/address_line1"
                android:layout_below="@+id/countrySpinner"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <TextView
                android:id="@+id/moreHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addressLine1Edit"
                android:background="@drawable/item_image_bg"
                android:layout_marginTop="8dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingRight="4dp"
                android:paddingLeft="8dp"
                android:text="@string/more"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/arrowImage"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_arrow_down_small"
                android:layout_alignTop="@+id/moreHeader"
                android:layout_alignBottom="@+id/moreHeader"
                android:layout_alignRight="@+id/moreHeader"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"/>
            <RelativeLayout
                android:id="@+id/layoutMore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/moreHeader"
                android:layout_marginBottom="8dp">
                <EditText
                    style="@style/edit_text_style_check"
                    android:id="@+id/addressLine2Edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:imeOptions="actionNext"
                    android:inputType="textPostalAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:hint="@string/address_line2"/>
                <EditText
                    style="@style/edit_text_style_check"
                    android:id="@+id/addressLine3Edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addressLine2Edit"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:imeOptions="actionNext"
                    android:inputType="textPostalAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:hint="@string/address_line3"/>
                <EditText
                    style="@style/edit_text_style_check"
                    android:id="@+id/stateEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addressLine3Edit"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:hint="@string/state"/>
            </RelativeLayout>
            <TableLayout
                android:id="@+id/cityTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_below="@+id/layoutMore"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        style="@style/edit_text_style2"
                        android:id="@+id/zipEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:imeOptions="actionNext"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:hint="@string/zip"/>
                    <EditText
                        style="@style/edit_text_style2"
                        android:id="@+id/cityEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:imeOptions="actionDone"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:hint="@string/city"/>
                </TableRow>
            </TableLayout>

        </RelativeLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/shadow_top"
        android:layout_above="@+id/saveButton"/>
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:text="@string/save"
        android:background="@drawable/button_selector"/>

</RelativeLayout>

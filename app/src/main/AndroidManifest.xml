<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.couchdev.android.layoutsandbox">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon_small"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/register">
        </activity>
        <activity android:name=".ChooseActivity"
            android:label="@string/use_as">
        </activity>
        <activity android:name=".AddressActivity"
            android:label="@string/address">
        </activity>
        <activity android:name=".IDActivity"
            android:label="@string/id">
        </activity>
        <activity android:name=".AGBActivity"
            android:label="@string/agb">
        </activity>
        <activity android:name=".SaleItemActivity"
            android:label="@string/buy">
        </activity>
        <activity android:name=".UserDataActivity"
            android:label="@string/user">
        </activity>
        <activity android:name=".CreateItemActivity"
            android:label="@string/new_item">
        </activity>
        <activity android:name=".RecentlyViewedActivity"
            android:label="@string/recently_viewed">
        </activity>
        <activity android:name=".FavoritesActivity"
            android:label="@string/favos">
        </activity>
        <activity android:name=".MyItemsActivity"
            android:label="@string/my_items">
        </activity>

        <!-- generated activities -->
        <activity
            android:name="generated.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="generated.ScrollingActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="generated.SettingsActivity">
        </activity>
    </application>

</manifest>